MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "chatbots.png"
            size_hint: .8, .5
            pos_hint: {"center_x": .55, "center_y": .8}
        MDLabel:
            text: "Unleash the power of technology at your fingertips"
            size_hint_x: .9
            font_name: "Sk-Modernist-Bold"
            font_size: "18sp"
            pos_hint : {"center_x": .5, "center_y": .45}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint : {"center_x": .5, "center_y": .1}   
            canvas:
                Color:
                    rgb: (135/255, 206/255, 235/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        Button:
            text: ""
            size_hint: .45, .08
            radius:{65.5, 65.5, 65.5, 65.5}
            pos_hint : {"center_x": .5, "center_y": .1}
            background_color: 0,0,0,0
            on_release: app.root.current = "chats"
        MDLabel: 
            text: "Let's Chat"
            halign: "center"
            pos_hint: {"center_y": .1}
            font_name: "Sk-Modernist-Bold"
            font_size: "18sp"
            color: 1,1,1,1
